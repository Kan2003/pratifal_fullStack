{
    "version": 2,
    "builds": [
        {
            "src": "index.js", // Since root is now backend, this points directly to index.js
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/index.js" // Forward API requests to index.js
        }
    ]
}
